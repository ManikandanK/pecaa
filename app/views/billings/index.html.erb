<h1>Listing billings</h1>

<table>
  <tr>
    <th>Method</th>
    <th>Site</th>
    <th>Order</th>
    <th>Auth code</th>
    <th>Amount</th>
    <th>Site user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @billings.each do |billing| %>
  <tr>
    <td><%= billing.method %></td>
    <td><%= billing.site_id %></td>
    <td><%= billing.order_id %></td>
    <td><%= billing.auth_code %></td>
    <td><%= billing.amount %></td>
    <td><%= billing.site_user_id %></td>
    <td><%= link_to 'Show', billing %></td>
    <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
    <td><%= link_to 'Destroy', billing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

