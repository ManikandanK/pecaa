  <div class="content-section categoryMain">
    <div class="pages-main">
      <div class="pages-wrapper">
        <div class="usersLeftPane">
          <div class="title">Choose Catalogs<span class="help"><a href="#"></a></span></div>
        </div>
        <div class="site-users left">
          <div class="page-data clear catalogMain">
            <div class="userGrid productGrid">
              <div class="userGridHeader">
                <ul class="ConLibraHeads">
                  <li> <span class="userName">Supplier Name</span><span class="userName">Category Name</span><span class="userName">Date Added</span><span class="userName">Last Updated</span>  <span class="created">Enabled</span> <span class="group">Price Modifier</span> </li>
                </ul>
              </div>
              <div class="userGridBody">
                <div id="scrollbar1">
                  <div class="scrollbar">
                    <div class="track">
                      <div class="thumb">
                        <div class="end"></div>
                      </div>
                    </div>
                  </div>
                  <div class="viewport">
                    <div class="shadows"><span class="topShadow"></span><span class="bottomShadow"></span></div>
                    <div class="overview">
                      <ul class="ConLibra">
                      <% @catalogs.each do |c| %>
                        <li class="selected"> 
                          <span class="catalog"><%=c.supplier_name%></span>
                          <span class="catalog"><%=c.name%></span>
                          <span class="active"><%=c.created_at.strftime("%b/%d/%y")%></span>
                          <span class="active"><%=c.updated_at.strftime("%b/%d/%y")%></span>
                          <span class="active"><img src="/assets/<%= c.is_active? ? 'bg_On' : 'bg_Off'%>.png" width="40" height="20">
                          </span>
                          <span class="group">
                            <span>
                              <input name="" type="text" class="modifierTextBg" value="<%=c.price_modifier%>" size="4" maxlength="6">
                            </span>
                          </span> 
                        </li>
                      <%end%>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="userGridFooter"></div>
            </div>
            <div class="addNewUserBtn">
              <a class="addNewUser" rel="facebox" href="<%=new_site_catalog_path(@site)%>" class="addProductBtn">add catalog</a>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">

  $(document).ready(function(){
  	$('#scrollbar1').tinyscrollbar();
  	$(".ConLibra li:even").addClass("alt");

  	$("ul.ConLibra li").click(function(){
  		var $this = $(this);
  		//$this.parent().find('.misc img').hide();
		
  		if(!$this.hasClass("selected")){
  			$("ul.ConLibra li").removeClass("selected");
  			$("ul.ConLibra li").find('.pointer').hide();
  			$this.addClass("selected");
  			$this.find('.pointer').show();
  			//$this.find('.misc img').show();
  		}
  		return false;
		
  	});
  });
</script>
