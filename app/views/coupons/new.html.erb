<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>PECAA</title>
        <link rel="stylesheet" href="css/layout.css" type="text/css">
        <link href="css/pages.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="css/users.css" type="text/css">
        <link rel="stylesheet" href="css/tinyscroll.css" type="text/css">
        <link rel="stylesheet" href="css/siteinfo.css" type="text/css">
        <link href="css/cart.css" rel="stylesheet" type="text/css">
        <link href="css/features.css" rel="stylesheet" type="text/css">
        <script type="text/javascript">
            
            $(document).ready(function(){
                $('#scrollbar1').tinyscrollbar();
                $(".ConLibra li:even").addClass("alt");
                
                $("ul.ConLibra li").click(function(){
                    var $this = $(this);
                    //$this.parent().find('.misc img').hide();
                    
                    if (!$this.hasClass("selected")) {
                        $("ul.ConLibra li").removeClass("selected");
                        $("ul.ConLibra li").find('.pointer').hide();
                        $this.addClass("selected");
                        $this.find('.pointer').show();
                        //$this.find('.misc img').show();
                    }
                    return false;
                    
                })
                /* enable products*/
                
                $('#enableProductBtn').click(function(){
                    $('.rBtnOn').addClass('rBtnOff');
                })
                
            })
        </script>
    </head>
    <body>
        <div class="popWindow">
        	<%=form_for [Site.find(params[:site_id]), Coupon.new] do |f|%>
            <div class="headSection">
                <h2>New Coupon</h2>
                <span><a href="#"><img src="css/img/helpIcon.png" width="20" height="20"></a></span>
            </div>
            <div class="midSection">
                <div class="cartColumsMain3">
                    <div class="rowDiv2">
                        <dl class="noMargin">
                            <dt>
                                Coupon Code :
                            </dt>
                            <dd>
                            	<%=f.text_field :code, :class => "inputReadOnly"%>
                            </dd>
                            <dt>
                                friendly text:
                            </dt>
                            <dd>
                                <%=f.text_field :free_text, :class => "inputReadOnly"%>
                            </dd>
                            <dt>
                                expiration date:
                            </dt>
                            <dd id="date_range">
                            	<%= text_field_tag "coupons[expired_at]", Date.today.strftime('%m-%d-%Y'), :class=>'inputReadOnly datepicker', :id=>"datepicker1", :size=>10 %>
								
                            </dd>
                            <dt>
                                coupon type:
                            </dt>
                            <dd>
                                <select class="noEdit">
                                    <option>%</option>
                                </select>
                                <select class="noEdit" name="coupons[coupon_type]">
                                    <option>shipping</option>
                                </select>
                            </dd>
                            <dt>
                                coupon amount:
                            </dt>
                            <dd>
                                <%=f.text_field :amount, :class => "inputReadOnly"%>
                            </dd>
                            <dt>
                                multi use coupon:
                            </dt>
                            <dd>
                                <select class="noEdit" name="coupons[multi_use]">
                                    <option>yes</option>
									<option>No</option>
                                </select>
                            </dd>
                            <dt>
                                Number of use:
                            </dt>
                            <dd>
                                <%=f.text_field :no_of_users, :class => "inputReadOnly"%>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="footSection">
                <input name="" type="button" class="grayBtn" value="cancel"><input name="" type="submit" class="greenBtn" value="save changes">
            </div>
			<%end%>
        </div>
    </body>
</html>