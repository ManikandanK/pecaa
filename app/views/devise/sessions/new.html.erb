<div id="logo">
        <img src="/assets/logo.png" width="210" height="35" />
</div>

<%= form_for :user, :url => user_session_path do |f| %>
    <div id="login">
    	<%= f.text_field :email, :class => 'textbox watermark', :id=>'gUsername',:title=>"username"%><br />
		<%= f.password_field :password, :value=>"password", :class => 'textbox watermarked', :id=>'gPassword' ,:title=>"password"%>
    </div>
    
    <p><%= f.check_box :remember_me %> 
    remember me on this computer</p>
    
    <p><%= f.submit "Login",:class=>'blueButton',:id=>"gLogin"%></p>
<%end%>

<%if flash[:alert] %><div class="loginErrorMsg"><%= flash[:alert] %>  </div><%end%>
<div id="forgotPassword">
	<%=link_to "forgot username / password",new_user_password_path%>
</div>

<script type="text/javascript">
	$(function () {
		$("#gUsername").watermark("username", {useNative: false});
	    $("#gPassword").watermark("password", {useNative: false});
    });

</script>
