<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <title>PECAA</title>
  <link rel="stylesheet" href="/assets/layout.css" type="text/css">
  <link rel="stylesheet" href="/assets/users.css" type="text/css">
  <link rel="stylesheet" href="/assets/tinyscroll.css" type="text/css">
  <script src="/assets/jquery-1.7.1.min.js" type="text/javascript"></script>
  <script src="/assets/inputstyle.js" type="text/javascript"></script>
  <script type="text/javascript" src="/assets/jquery.tinyscrollbar.min.js"></script>
  <%= javascript_include_tag 'facebox.js'%>
  <%= javascript_include_tag 'common.js'%>
  <script type="text/javascript">

    $(document).ready(function() {
      $('#products1').tinyscrollbar();
      $(".ConLibra li:even").addClass("alt");

      $("ul.ConLibra li").click(function() {
        var $this = $(this);
        if (!$this.hasClass("selected")) {
          $("ul.ConLibra li").removeClass("selected");
          $("ul.ConLibra li").find('.pointer').hide();
          $this.addClass("selected");
          $this.find('.pointer').show();
          //$this.find('.misc img').show();
        }
        return false;
      })
    })
  </script>
  <link href="/assets/products.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="mainContainer">
  <div class="userEditHolder">
    <div class="header-section">
      <%= render :partial => 'shared/main_header' %>


      <div class="main-nav">
        <div class="navBtns">
          <ul>
            <li class="products"></li>
            <li class="payments acttive"></li>
            <li class="taxes"></li>
            <li class="shipping"></li>
            <li class="features"></li>
            <li class="orders"></li>
            <li class="reports"></li>
          </ul>
        </div>
      </div>

      <div class="user-tabs">
        <ul>          
          <%= link_to "<li class='#{PaymentGateway.find_active_payment('Authorize.net', params[:id])}'>payment gateway</li>".html_safe, site_payment_path(@site.id, PaymentGateway.find_by_name('Authorize.net').id) %>
          <%= link_to "<li class='#{PaymentGateway.find_active_payment('Pay Pal', params[:id])}'>Pay Pal</li>".html_safe, site_payment_path(@site.id, PaymentGateway.find_by_name('Pay Pal').id) %>
          <%= link_to "<li class='#{PaymentGateway.find_active_payment('Google Checkout', params[:id])}'>Google Checkout</li>".html_safe, site_payment_path(@site.id, PaymentGateway.find_by_name('Google Checkout').id) %>
          <%= link_to "<li class='#{PaymentGateway.find_active_payment('No Payment', params[:id])}'>no payment required</li>".html_safe, site_payment_path(@site.id, PaymentGateway.find_by_name('No Payment').id) %>
        </ul>
      </div>
    </div>

    <div class="content-section">
      <%= yield %>
    </div>
  </div>
<script type="text/javascript">
    $('.payments').live('click', function(){
      window.location = '<%= site_payments_path(@site.id)%>';
    });

  </script>
</div>
</body>
</html>

