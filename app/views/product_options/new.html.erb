<%= stylesheet_link_tag "layout", "content", "site_pages", "facebox", "modal_layout", 'themes' %>

<%= form_for [@site, @product_option] do |f| %>
  <div class="main-container midium">
  	<div class="header">Create New Product Option<span class="helpIcon"></span></div>
  	<div class="main-content">
  		<div class="createPage">
  		  <div class="extForm">
  				<div class="form-row">
  				  <span class="key">Name:</span>
    			  <span class="val"><%= f.text_field :name, :placeholder=>"Name Of Product Option" %></span>
  				</div>
  				<div class="form-row">
  				  <span class="key">Friendly name:</span>
    			  <span class="val"><%= f.text_field :display_name, :placeholder=>"Friendly Name" %></span>
  				</div>
  				<div class="form-row">
  				  <span class="key">Price Modifier:</span>
    			  <span class="val"><%= f.select(:price_modifier, '<option value="$">$</option><option value="%">%</option>') %>
  			    </span>
          </div>	  
  			</div>
  		</div>
  	</div>
  	<div class="footer-section">
  		<div class="leftBtns"><button class="secondary" id="cancelBtn">cancel</button> </div>
  		<div class="rightBtns"><button class="primary" id="saveBtn">Create Product Option</button> </div>
  	</div>
  </div>
<% end %>
<script>
$('#cancelBtn').click(function(){
    $(document).trigger('close.facebox');
    return false;
});
</script>
