<h1>Listing Roles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Display name</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |permission| %>
  <tr>
    <td><%= permission.name %></td>
    <td><%= permission.display_name %></td>
    <td><%= permission.created_by %></td>
    
    <td><%= link_to 'Show', permission %></td>
    <td><%= link_to 'Edit', edit_role_path(permission) %></td>
    <td><%= link_to 'Destroy', permission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

