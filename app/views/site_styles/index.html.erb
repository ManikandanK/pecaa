  function refreshTextOpacity() {
    var transparency = $("#opacity_text").slider("value")
		$("#opacity_text_val").text(transparency + "px");
	}

  
  $( "#border_width" ).slider({
    orientation: "horizontal",
    min: 0,
    max: 10,
