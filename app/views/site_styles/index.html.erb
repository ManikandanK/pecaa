		change: refreshBwidth});
    
    function refreshBwidth() {
      var transparency = $("#border_width").slider("value")
    	$("#border_width_val").text(transparency + "px");
    }
  	
  	$( "#border_radius" ).slider({
      orientation: "horizontal",
      min: 0,
