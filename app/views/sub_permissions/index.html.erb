<h1>Listing sub_permissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Display name</th>
    <th>Permission</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_permissions.each do |sub_permission| %>
  <tr>
    <td><%= sub_permission.name %></td>
    <td><%= sub_permission.display_name %></td>
    <td><%= sub_permission.permission_id %></td>
    <td><%= sub_permission.created_by %></td>
    <td><%= sub_permission.updated_by %></td>
    <td><%= link_to 'Show', sub_permission %></td>
    <td><%= link_to 'Edit', edit_sub_permission_path(sub_permission) %></td>
    <td><%= link_to 'Destroy', sub_permission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

