<%#= stylesheet_link_tag "pecaa"%>
<div class="addFileHolder" style="margin-top:10px">
    <div class="addFileTop">Add Text Block <img src="/assets/icon-help-grey.png" class="help" /></div>
    <%= form_for(@text, :html => { :multipart => true }, :remote => true) do |f| %>
	<%=hidden_field_tag :from_content, @from_content%>
    <%#= f.object.errors %>
    <div class="addFileBody">
      <%= f.text_area :description, :rows => 20, :cols => 50,:style => "height:150px;" %>
      
    </div>
    <div class="addFileBottom">
      <div class="btnCancelLeft">
        <input type="reset" value="Cancel" class="btnCancel" />
      </div>
      <div class="btnUploadFileLeft">
        <button class="primary" id="saveBtn">Submit</button>
      </div>
    </div>
    <% end %>
</div>

