<script type="text/javascript">
    jQuery(".inputBlr").each(function(){
        jQuery(this).val(jQuery(this).attr('rel'));
    })
    jQuery(".inputBlr").focus(function(){
        if(jQuery(this).val() == jQuery(this).attr('rel')){
            jQuery(this).val('');
        }
    })

    jQuery(".inputBlr").blur(function(){
        if(jQuery(this).val() == ''){
            jQuery(this).val(jQuery(this).attr('rel'));
        }
    })
</script>
