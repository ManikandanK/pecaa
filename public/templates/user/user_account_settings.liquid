<!DOCTYPE HTML>
<html>
	<head>
		<title>Pecaa</title>
		<link href="/css/pecaaCF.css" rel="stylesheet" type="text/css" />
		<script src="/assets/jquery.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			$('document').ready(function(){
				$('.menu li ul').hide();
			    $('#mainNav a.dropdown').parent().hover(function(e) {
			        $(this).find('.subMenuBox').stop().slideToggle("medium");
			    });

			});
		</script>
	</head>
	<body>
		
		<div class="content-section">
			<header class="clearfix">
				<div class="banner clearfix">
					<div class="hItem"><img src="/css/img/logo.png" border="0" /></div>
					<div class="hItem">
						<div class="hSubItem"><img src="/css/img/iconHeaderPromo.png" border="0" /></div>
						<div class="hSubItem"><div class="headerSearch clearfix"><span class="searchBox"><input type="text" /></span><span class="searchBtn"><img src="/css/img/btnHeaderSearch.png" border="0" /></span></div></div>
					</div>
					<div class="hItem hCart"><img src="/css/img/iconHeaderCart.png" border="0" /></div>
				</div>
				
			</header>
			<nav class="clear" id="mainNav">
				<ul>
				  {% for site_page in site.parent_pages %}
						<li class="active">
						  {% if site_page.children.first == null %}
						    <a href="/sites/{{ site.id }}/preview?page_id={{ site_page.id }}" title="{{site_page.name}}">
						  {% else %}
						    <a href="/sites/{{ site.id }}/preview?page_id={{ site_page.id }}" title="{{site_page.name}}"  class="dropdown">
					    {% endif %}
						    <span>{{site_page.name}}</span>
              </a>
              {% if site_page.children != [] %}
  					    <div class="subMenuBox" style="display: none;">
    							<ul class="subMenu clearfix">
    							  {% for child_page in site_page.children %}
      								<li>
      								  <a href="/sites/{{ site.id }}/preview?page_id={{ child_page.id }}" title="{{child_page.name}}">
        						    <span>{{child_page.name}}</span>
                        </a>
        						  </li>
      						  {% endfor %}
    							</ul>
    						</div>
  			      {% endif %}
            </li>
					{% endfor %}
				</ul>
			</nav>
			<div class="main-content clearfix clear">
				<div class="account-section clearfix">
					<h1 class="lightGreen">Account Settings</h1>
					<div class="colum-wraper clearfix">
						<div class="colum twoZeroZero noBorder left">
							<div class="row last clearfix">
								<ul class="accountMenu clearfix">
									<li><a href="#">dashboard</a></li>
									<li><a href="#">order history</a></li>
									<li class="active"><a href="#">account settings</a></li>
									<li><a href="#">address book</a></li>
								</ul>
							</div>
						</div>
						<div class="colum left eightOneFive cleafix">
							<div class="row clearfix">
								<h4>Personal Info</h4>
								<div class="contentBox">
                  <form id="account-form" name="account" method="post" action="/sites/{{site.id}}/accounts">
		              <label class="labelCls">first name:</label>
		              <input name="user[first_name]" type="text" class="inputCls" id="user_first_name" value="{{ user.firstname }}"/>
		              <label class="labelCls">last name:</label>
		              <input name="user[last_name]" type="text" class="inputCls" id="user_last_name" value="{{user.lastname}}"/>
		              <label class="labelCls">email:</label>
		              <input name="user[email]" type="text" class="inputCls" id="user_email" value="{{user.email}}"/>
		              <label class="labelCls">phone:</label>
		              <input name="user[phone_number]" type="text" class="inputCls" id="user_phone_number" value="{{user.phone_number}}"/>
                  <!--label class="labelCls">password:</label>
                  <input name="phone" type="password" class="inputCls" id="inputPsw" /-->
                  <input type="submit" value="Save Changes" class="submitCls lightGreen hundredPix">
                  </form>
						      </div>
					      </div>
							<div class="row last clearfix">
								<h4>Your Faces <span class="inst">Click to delete a face</span></h4> 
								<div class="contentBox">
						              <ul class="photos clearfix">
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace1.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace3.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace4.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace2.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace5.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace1.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace3.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded "><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace2.png" border="0"/></a></li>
						              	<li><span class="deleteMsk faded hidden"><a href="#" class="deletePhoto"></a></span><a href="#"><img src="/css/img/imgFace4.png" border="0"/></a></li>
						              </ul>
						              <input type="submit" value="Add New Face" class="submitCls lightGreen hundredPix">
						         </div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="newsLetter clearfix">
				<span class="getEmail">Get our email newsletter - </span>
				<span class="promiss">we wonâ€™t share your number with anyone else, we promise!</span>
				<span class="signup clearfix"><span><input type="text" placeholder="your email address" /></span>
					<img src="/css/img/btnSignupNews.png" border="0" />
				</span>
			</div>
			<footer class="clearfix">
				<div class="fCol">
					<h3>Pecaa Eyeglasses Inc.</h3>
					<h4>Pecaa Eyeglasses Inc.</h4>
					<h4>Pecaa Eyeglasses Inc.</h4>
				</div>
				<div class="fCol">
					<h2>email : <span class="val email">info@pecaa.com</span></h2>
					<h2>phone : <span class="val">222.187..1588</span></h2>
				</div>
				<div class="fCol last">
					<ul class="sMedia clearfix">
						<li class="fb"></li>
						<li class="tw"></li>
						<li class="gp"></li>
						<li class="li"></li>
					</ul>
				</div>
			</footer>
		</div>
	</body>
</html>