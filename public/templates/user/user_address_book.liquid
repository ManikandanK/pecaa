<!DOCTYPE HTML>
<html>
	<head>
		<title>Pecaa</title>
		<link href="/css/pecaaCF.css" rel="stylesheet" type="text/css" />
		<script src="/assets/jquery.min.js" type="text/javascript"></script>
		<script src="/assets/facebox.js" type="text/javascript"></script>
		<link href="/assets/facebox.css" rel="stylesheet" type="text/css" />
		<script type="text/javascript">
			$('document').ready(function(){
				$('.menu li ul').hide();
			    $('#mainNav a.dropdown').parent().hover(function(e) {
			        $(this).find('.subMenuBox').stop().slideToggle("medium");
			    });
			    
			    $('a[rel*=facebox]').facebox({
          loadingImage : '/assets/loading.gif',
          closeImage   : '/assets/btn_deleteUser_active.png'
          })
          
          $('#submitCls').click(function(){
              alert('CHJK');
              $('#address_link').trigger('click')
          });
          
          

			});
			// trigger facebox when the bg-image button is clicked
    	
		</script>
	</head>
	<body>
		
		<div class="content-section">
			<header class="clearfix">
				<div class="banner clearfix">
					<div class="hItem"><img src="/css/img/logo.png" border="0" /></div>
					<div class="hItem">
						<div class="hSubItem"><img src="/css/img/iconHeaderPromo.png" border="0" /></div>
						<div class="hSubItem"><div class="headerSearch clearfix"><span class="searchBox"><input type="text" /></span><span class="searchBtn"><img src="/css/img/btnHeaderSearch.png" border="0" /></span></div></div>
					</div>
					<div class="hItem hCart"><img src="/css/img/iconHeaderCart.png" border="0" /></div>
				</div>
				
			</header>
			<nav class="clear" id="mainNav">
				<ul>
				  {% for site_page in site.parent_pages %}
						<li class="active">
						  {% if site_page.children.first == null %}
						    <a href="/sites/{{ site.id }}/preview?page_id={{ site_page.id }}" title="{{site_page.name}}">
						  {% else %}
						    <a href="/sites/{{ site.id }}/preview?page_id={{ site_page.id }}" title="{{site_page.name}}"  class="dropdown">
					    {% endif %}
						    <span>{{site_page.name}}</span>
              </a>
              {% if site_page.children != [] %}
  					    <div class="subMenuBox" style="display: none;">
    							<ul class="subMenu clearfix">
    							  {% for child_page in site_page.children %}
      								<li>
      								  <a href="/sites/{{ site.id }}/preview?page_id={{ child_page.id }}" title="{{child_page.name}}">
        						    <span>{{child_page.name}}</span>
                        </a>
        						  </li>
      						  {% endfor %}
    							</ul>
    						</div>
  			      {% endif %}
            </li>
					{% endfor %}
				</ul>
			</nav>
			<div class="main-content clearfix clear">
				<div class="account-section clearfix">
					<h1 class="lightGreen">Address Book</h1>
					<div class="colum-wraper clearfix">
						<div class="colum twoZeroZero noBorder left">
							<div class="row last clearfix">
								<ul class="accountMenu clearfix">
									<li><a href="#">dashboard</a></li>
									<li><a href="#">order history</a></li>
									<li><a href="/site/{{site.id}}/accounts/user_account_settings">account settings</a></li>
									<li class="active"><a href="#">address book</a></li>
								</ul>
							</div>
						</div>
						<div class="colum left eightOneFive cleafix">
							<div class="row clearfix">
								<h4>Your Address</h4>
								<ul class="addressBook noMargin noPadding clearfix">
								  {% for address in user.addresses%}
									<li>
						              <label class="labelCls">address</label>
						              <input name="fname" type="text" class="inputCls" id="inputFname" value="{{address.address_one}}" />
						              <input name="fname" type="text" class="inputCls" id="inputFname" value="{{address.address_two}}" />
						              <label class="labelCls">city</label>
						              <input name="lname" type="text" class="inputCls" id="inputLname" value="{{address.city}}" />
						              <label class="labelCls">state</label>
						              <input name="email" type="text" class="inputCls" id="inputEmail" value="{{address.state}}" />
						              <label class="labelCls">zip code</label>
						              <input name="phone" type="text" class="inputCls" id="inputPhone" value="{{address.zipcode}}" />
						              <div class="defaultAdd clearfix"><span><input type="checkbox" /></span><span>use as default shipping address</span></div>
						              <div class="defaultAdd clearfix"><span><input type="checkbox" checked="checked" /></span><span>use as default billing address</span></div>
						              <button class="btn pink">delete address</button>
                  </li>
                  {% endfor %}
					      </ul>
                <input type="submit" value="Add New Address" id="submitCls" class="submitCls lightGreen hundredPix">
                <a href='/sites/{{site.id}}/add_address' rel="facebox" id="address_link" style="display:none"></a>
					        </div>
						</div>
					</div>
				</div>
			</div>
			<div class="newsLetter clearfix">
				<span class="getEmail">Get our email newsletter - </span>
				<span class="promiss">we wonâ€™t share your number with anyone else, we promise!</span>
				<span class="signup clearfix"><span><input type="text" placeholder="your email address" /></span>
					<img src="/css/img/btnSignupNews.png" border="0" />
				</span>
			</div>
			<footer class="clearfix">
				<div class="fCol">
					<h3>Pecaa Eyeglasses Inc.</h3>
					<h4>Pecaa Eyeglasses Inc.</h4>
					<h4>Pecaa Eyeglasses Inc.</h4>
				</div>
				<div class="fCol">
					<h2>email : <span class="val email">info@pecaa.com</span></h2>
					<h2>phone : <span class="val">222.187..1588</span></h2>
				</div>
				<div class="fCol last">
					<ul class="sMedia clearfix">
						<li class="fb"></li>
						<li class="tw"></li>
						<li class="gp"></li>
						<li class="li"></li>
					</ul>
				</div>
			</footer>
		</div>
	</body>
</html>